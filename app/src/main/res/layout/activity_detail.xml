<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VolcanoDetail">



        <ImageView
            android:id="@+id/det_gambar_gunung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_minus20sdp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_container"
        android:padding="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_minus20sdp"

        >

        <TextView
            android:id="@+id/det_nama_gunung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfbold"
            android:text="Semeru"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/det_bentuk_gunung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfmed"
            android:text="Stratovulkan"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/det_tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfmed"
            android:text="617 Meter"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/det_estimasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Juni 2022" />

        <TextView
            android:id="@+id/det_geo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geolokasi" />


    </LinearLayout>



</LinearLayout>
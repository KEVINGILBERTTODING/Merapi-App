<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Merapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.Merapi.Utill.AppController"
        android:allowBackup="true"
        android:icon="@drawable/icon_map"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_map"
        android:supportsRtl="true"
        android:theme="@style/Theme.VolcanoApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.Merapi.LoginActivity"
            android:theme="@style/Theme.Login"
            android:exported="true" />
        <activity
            android:name="com.example.Merapi.RegisterActivity"
            android:theme="@style/Theme.Login"
            android:exported="true" />
        <activity
            android:name="com.example.Merapi.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Merapi.VolcanoDetail"
            android:exported="true" />
        <activity
            android:name="com.example.Merapi.MainActivity"
            android:exported="true" />
    </application>

</manifest>